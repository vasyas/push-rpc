{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "esm": true
  }
}
